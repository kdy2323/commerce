@model Commerce.Models.Commande

@{
    ViewData["Title"] = "Confirmation de la commande";
}

<h2>Commande validée</h2>

<p>Merci pour votre commande !</p>

<p>Numéro de commande : <strong>@Model.Id</strong></p>
<p>Date : @Model.DateCommande.ToString("dd/MM/yyyy HH:mm")</p>
<p>Statut : @Model.Statut</p>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index"> Retour à l'accueil</a>
